{%- from "isc_dhcp/map.jinja" import server with context %}

{%- for host_name, host in server.host.iteritems() %}

host {{ host_name }} {
  hardware ethernet {{ host.mac }};
  fixed-address {{ host.address }};
  {%- if host.hostname is defined %}
  ddns-hostname "{{ host.hostname }}";
  {%- endif %}
}

{%- endfor %}
